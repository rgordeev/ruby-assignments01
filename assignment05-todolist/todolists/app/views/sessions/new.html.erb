<% provide(:title, "Log in") %>
<h1>Log in</h1>
<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(:session, url: login_path) do |form| %>
      <%= form.label :username %>
      <%= form.text_field :username %>
      <%= form.label :password %>
      <%= form.password_field :password %>
      <%= form.submit "Login", class: "btn btn-primary" %>
    <% end %>
  </div>
</div>
